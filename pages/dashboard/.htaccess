# Proteger acesso direto ao dashboard HTML
# Forçar redirecionamento para o arquivo PHP com autenticação

RewriteEngine On

# Redirecionar dashboard.html para dashboard.php
RewriteRule ^dashboard\.html$ dashboard.php [L,R=301]

# Bloquear acesso direto a arquivos HTML sem autenticação
RewriteCond %{REQUEST_FILENAME} \.html$
RewriteRule ^(.*)$ dashboard.php [L,R=301]
